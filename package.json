{
  "name": "etherdraw",
  "description": "Collaborative drawing and sketching in real time",
  "repository" : { 
    "type" : "git",
    "url" : "http://github.com/JohnMcLear/draw.git"
  },
  "version": "0.1.2",
  "engines": {
    "node": ">=0.12.x"
  },
  "dependencies": {
    "express": "~3.5.1",
    "eslint": "~2.9.0",
    "socket.io": "~1.0.0",
    "async": "~0.6.2",
    "ueberDB": "~0.2.1",
    "canvas": "1.2.1",
    "paper": "0.9.22",
    "jsonminify":"~0.2.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "indent": ["error", 2],
      "quotes": [1, "single"],
      "semi": ["error", "always"],
      "no-undef": 0,
      "no-console": 1
    }
  }
}